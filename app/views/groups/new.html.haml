= form_for(group) do |f|
  .field
    = f.label :name, "Group Name"
    = f.text_field :name, placeholder: "enter a name for your group"
    = f.label :description, "Description"
    = f.text_area :description, placeholder: "enter a short description for your group"
    = f.label :category
    = f.collection_select :category, Group::CATEGORIES, :to_s, :to_s,
      include_blank: true
  = f.submit "Create my group!", class: "btn btn-large btn-primary"