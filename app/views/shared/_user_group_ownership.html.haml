- if current_user.groups.any?
  %h3
    I manage #{pluralize(current_user.groups.count, "group")}.
  %ul
    - current_user.groups.each do |group|
      %li
        = link_to group.name, group_path(group)
%section
  - if current_user.group_memberships.any?
    %h3
      I am a member of #{pluralize(current_user.memberships.count, "group")}.
    %ul
      - current_user.group_memberships.each do |membership|
        %li
          = link_to membership.name, group_path(membership)